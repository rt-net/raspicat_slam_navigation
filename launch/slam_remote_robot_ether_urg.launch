<?xml version="1.0"?>
<launch>
  <arg name="ip_address" default="192.168.0.10" />
  <arg name="imu" default="true" />

  <include file="$(find raspicat_gamepad_controller)/launch/run_with_base_nodes.launch">
    <arg name="imu" value="$(arg imu)" />
  </include>

  <node pkg="tf" type="static_transform_publisher" name="raspicat_lidar_link_broadcaster" args="0.144 0.0 0.04 0 0 0 /base_link /lidar_link 100" />

  <node pkg="urg_node" name="urg_node" type="urg_node" required="true">
    <param name="frame_id" value="lidar_link" />
    <param name="ip_address" value="$(arg ip_address)" />
  </node>
</launch>
